<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pei.foodpie">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".volleysingleton.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.SettingActivity"/>

        <activity android:name=".activity.LoginActivity"/>

        <activity android:name=".activity.CommonActivity"/>

        <activity android:name=".activity.HomeDetailActivity"/>

        <activity android:name=".activity.HomeDetailSecondActivity"/>

        <activity android:name=".foodbaike.detail.FoodActivity"/>

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/eighty"
        android:layout_margin="@dimen/ten"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_knowledge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/test"
            android:textSize="@dimen/fifteen_size" />

        <LinearLayout
            style="@style/WidthMatchAndHeightZeroWeightOne"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_knowledge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/username"
                android:textSize="@dimen/twelve" />

            <ImageView
                style="@style/WidthZeroAndHeightWrapWeightOne"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_watch" />

            <TextView
                android:id="@+id/count_knowledge"
                style="@style/WidthZeroAndHeightMatchWeightOne"
                android:gravity="center_vertical"
                android:text="@string/test"
                android:textSize="@dimen/twelve" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/pic_knowledge"
        style="@style/WidthZeroAndHeightMatchWeightOne"
        android:layout_margin="@dimen/ten"
        android:src="@mipmap/ic_launcher" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.aspsine.swipetoloadlayout.SwipeToLoadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_load_layout">

    <com.pei.foodpie.customrefresh.RefreshHeaderView
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred"
        android:gravity="center"
        android:id="@id/swipe_refresh_header"/>

    <android.support.v7.widget.RecyclerView
        style="@style/WidthAndHeightMatch"
        android:id="@id/swipe_target">

    </android.support.v7.widget.RecyclerView>

    <com.pei.foodpie.customrefresh.LoadMoreFooterView
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred"
        android:gravity="center"
        android:id="@id/swipe_load_more_footer"/>

</com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:layout_marginTop="@dimen/twenty">

        <ImageView
            android:id="@+id/iv_evaluation"
            style="@style/WidthAndHeightMatch"
            android:background="@mipmap/img_home_bg"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title_evaluation"
            style="@style/WidthAndHeightWrap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twenty"
            android:text="@string/test"
            android:textColor="@color/my_button_line"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/desc_evaluation"
            style="@style/WidthAndHeightWrap"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/twenty"
            android:gravity="center"
            android:text="@string/test"
            android:textColor="@color/my_button_line"
            android:textSize="@dimen/fifteen_size" />

        <LinearLayout
            style="@style/WidthAndHeightWrap"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/twenty"
            android:orientation="horizontal">

            <ImageView
                style="@style/WidthAndHeightWrap"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/five"
                android:src="@mipmap/ic_read" />

            <TextView
                android:id="@+id/count_evaluation"
                style="@style/WidthAndHeightWrap"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginTop="@dimen/twenty"
                android:gravity="center"
                android:text="@string/test"
                android:textColor="@color/my_button_line"
                android:textSize="@dimen/twelve" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_search_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_back_dark_center"/>

        <EditText
            android:id="@+id/et_input_search_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:hint="请输入食物名称"/>

        <ImageView
            android:id="@+id/iv_clear_search_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_clear"/>

        <ImageView
            android:id="@+id/iv_search_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_search"/>

    </LinearLayout>

    <View
        style="@style/DivideLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_detail_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:text="营养素排序" />

        <ImageView
            android:id="@+id/iv_order_arrow_down_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="150dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_food_arrow_ordering" />

    </LinearLayout>

    <View
       style="@style/DivideLine"/>

    <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_detail_food_detail">

    </com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView>

</LinearLayout>
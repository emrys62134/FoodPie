<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">

        <!--头部-->
        <RelativeLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img_home_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食物派"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/query_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询食物信息"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"/>

            <RelativeLayout
                android:layout_below="@id/query_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:scaleType="center"
                    android:src="@mipmap/ic_home_search"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@mipmap/ic_home_search"
                    android:hint="请输入食物名称"
                    android:textSize="18sp"
                    android:background="#ffffff"
                    android:textColor="#ea8b51"/>

            </RelativeLayout>



        </RelativeLayout>

        <!--对比-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:src="@drawable/food_bai_ke_analysis"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="饮食分析"
                    android:background="#ffffff"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#a7a0a0"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:src="@drawable/food_bai_ke_compare"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="搜索对比"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#a7a0a0"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:src="@drawable/food_bai_ke_scan"
                    android:background="#ffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="扫码对比"
                    android:background="#ffffff"
                    android:gravity="center"/>

            </LinearLayout>





        </LinearLayout>

        <!--食物分类-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食物分类"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <GridView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gv_food"
                android:verticalSpacing="30dp"
                android:numColumns="3">


            </GridView>

        </LinearLayout>


        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门品牌"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <GridView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gv_brand"
                android:verticalSpacing="30dp"
                android:numColumns="3">


            </GridView>

        </LinearLayout>

        <!--餐饮连锁-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐饮连锁"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <GridView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gv_restaurant"
                android:verticalSpacing="30dp"
                android:scrollbars="none"
                android:numColumns="3">


            </GridView>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
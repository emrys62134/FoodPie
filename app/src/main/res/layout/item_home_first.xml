<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/big_pic_home_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/title_home_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="鼎折覆餗"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_icon_home_first"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/user_name_home_first"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="14525445"/>
            <ImageView
                android:id="@+id/praise_home_first"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:baselineAlignBottom="true"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_home_agree"/>
            <TextView
                android:id="@+id/count_home_first"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="4545"/>

        </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
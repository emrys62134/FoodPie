<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/my_button_line"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/big_pic_home_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/five"
        android:adjustViewBounds="true"
        android:padding="@dimen/view_height"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:id="@+id/ll_home_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:layout_marginBottom="@dimen/five"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:layout_marginTop="@dimen/one_hundred_and_fifty"
        android:background="@color/my_button_line"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon_home_first"
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:layout_marginLeft="@dimen/five"
            android:layout_gravity="bottom"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/user_name_home_first"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="@string/test"
            android:textSize="@dimen/twelve" />

        <ImageView
            android:id="@+id/praise_home_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:scaleType="fitEnd"
            android:src="@mipmap/ic_home_agree" />

        <TextView
            android:id="@+id/count_home_first"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/ten"
            android:gravity="bottom"
            android:text="@string/test"
            android:textSize="@dimen/twelve" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_home_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_home_first"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/five"
        android:text="@string/test" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color"
        android:layout_marginTop="@dimen/five"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:layout_below="@id/title_home_first"/>


</RelativeLayout>
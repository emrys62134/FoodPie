<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp">

    <TextView
        android:layout_margin="@dimen/ten"
        android:id="@+id/desc_knowledge_second"
        style="@style/WidthMatchAndHeightZeroWeightOne"
        android:text="@string/test"
        android:textSize="@dimen/fifteen_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_one_second_knowledge"
            style="@style/WidthZeroAndHeightMatchWeightOne"
            android:layout_margin="@dimen/five"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_two_second_knowledge"
            android:layout_margin="@dimen/five"
            style="@style/WidthZeroAndHeightMatchWeightOne"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_three_second_knowledge"
            style="@style/WidthZeroAndHeightMatchWeightOne"
            android:layout_margin="@dimen/five"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <LinearLayout
        style="@style/WidthMatchAndHeightZeroWeightOne"
        android:layout_margin="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_knowledge_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="@dimen/twelve"
            android:text="@string/test"
            android:gravity="center_vertical"/>

        <ImageView
            style="@style/WidthWrapAndHeightZeroWeightOne"
            android:src="@mipmap/ic_watch"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/count_knowledge_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/test"
            android:textSize="@dimen/twelve"
            android:layout_marginLeft="@dimen/five"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>